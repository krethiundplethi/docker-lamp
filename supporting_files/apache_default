
NameVirtualHost *
Header set X-Content-Type-Options nosniff

<VirtualHost *:80>
        ServerName fellnhofer.engineering
        Redirect permanent / https://www.fellnhofer.engineering
</VirtualHost>

<VirtualHost *:443>
        ServerName fellnhofer.engineering
	Header always set Strict-Transport-Security "max-age=31536000; 
        Redirect permanent / https://www.fellnhofer.engineering
</VirtualHost>

<VirtualHost *:80>
	ServerName www.fellnhofer.engineering
        Redirect permanent / https://www.fellnhofer.engineering
</VirtualHost>

<VirtualHost *:443>
        ServerName www.fellnhofer.engineering
        ServerAdmin webmaster@localhost
        Header always set Strict-Transport-Security "max-age=31536000; 
	DocumentRoot /var/www/html

        <Directory />
                Options Indexes FollowSymLinks MultiViews
                # To make wordpress .htaccess work
                AllowOverride All
                Order allow,deny
                allow from all
        </Directory>
        <Directory /var/www/html>
                Options Indexes FollowSymLinks MultiViews
                # To make wordpress .htaccess work
                AllowOverride All
                Order allow,deny
                allow from all
        </Directory>

        Alias /phpmyadmin /var/www/phpmyadmin
        <Directory /phpmyadmin>
                Options Indexes FollowSymLinks MultiViews
                # To make wordpress .htaccess work
                AllowOverride All
                Order allow,deny
                allow from all
        </Directory>
        <Directory /var/www/phpmyadmin>
                Options Indexes FollowSymLinks MultiViews
                # To make wordpress .htaccess work
                AllowOverride All
                Order allow,deny
                allow from all
        </Directory>

        ScriptAlias /cgi-bin/ /usr/lib/cgi-bin/
        <Directory "/usr/lib/cgi-bin">
                AllowOverride None
                Options +ExecCGI -MultiViews +SymLinksIfOwnerMatch
                Order allow,deny
                Allow from all
        </Directory>

        ErrorLog ${APACHE_LOG_DIR}/error.log

        # Possible values include: debug, info, notice, warn, error, crit,
        # alert, emerg.
        LogLevel warn

        #CustomLog ${APACHE_LOG_DIR}/access.log combined
	CustomLog "|/var/www/anonip.py --ipv4mask 8 --ipv6mask 64 --output ${APACHE_LOG_DIR}/access.log" combined

	#
	# Set HTTPS environment variable if we came in over secure
	#  channel.
	SetEnvIf x-forwarded-proto https HTTPS=on
</VirtualHost>

<VirtualHost *:80>
	ServerName cloud.fellnhofer.engineering
	Redirect permanent / https://cloud.fellnhofer.engineering
</VirtualHost>

<VirtualHost *:443>
	DocumentRoot "/var/www/nextcloud"
	ServerName cloud.fellnhofer.engineering

	Header always set Strict-Transport-Security "max-age=31536000; 

	ErrorLog ${APACHE_LOG_DIR}/error.log
	#CustomLog ${APACHE_LOG_DIR}/access.log combined
	CustomLog "|/var/www/anonip.py --ipv4mask 8 --ipv6mask 64 --output ${APACHE_LOG_DIR}/access.log" combined

	<Directory /var/www/nextcloud/>
		Options +FollowSymlinks
		AllowOverride All

		<IfModule mod_dav.c>
			Dav off
		</IfModule>

		SetEnv HOME /var/www/nextcloud
		SetEnv HTTP_HOME /var/www/nextcloud
		Satisfy Any
	</Directory>

</VirtualHost>

<VirtualHost *:80>
        ServerName git.fellnhofer.engineering
        Redirect permanent / https://git.fellnhofer.engineering
</VirtualHost>

<VirtualHost *:443>
    ServerName git.fellnhofer.engineering
    ProxyPreserveHost On

    # setup the proxy
    <Proxy *>
        Order allow,deny
        Allow from all
    </Proxy>
    ProxyPass / https://localhost:3000/
    ProxyPassReverse / https://localhost:3000/
</VirtualHost>

